<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/black"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:weightSum="1">


    <RelativeLayout
        android:layout_width="290dp"
        android:layout_height="400dp"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/progress1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/cannyThresh"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:text="canny thresh"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cannyThresh"
            android:indeterminate="false"
            android:paddingTop="0dp"
            android:layout_above="@+id/progress2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
        />

        <TextView
            android:id="@+id/progress2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/carMaxSpeed"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:text="car max speed"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/carMaxSpeed"
            android:textColor="@color/white"
            android:indeterminate="false"
            android:paddingTop="0dp"
            android:layout_above="@+id/progress3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
        />

        <TextView
            android:id="@+id/progress3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/carScaleSteering"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:text="car scale steering"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/carScaleSteering"
            android:textColor="@color/white"
            android:indeterminate="false"
            android:paddingTop="0dp"
            android:layout_above="@+id/progress9"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
        />

        <TextView
            android:id="@+id/progress9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/carScaleDriftFix"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:text="car scale drift fix"
            android:textColor="@color/white"
            android:textSize="10sp" />
        
        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/carScaleDriftFix"
            android:indeterminate="false"
            android:paddingTop="0dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
        />

        <TextView
            android:id="@+id/progress10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/carScaleDriftFix"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:text="PID Kp"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <SeekBar
            android:id="@+id/pidKp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/progress10"
            android:layout_alignParentStart="true"
            android:indeterminate="false"
            android:paddingTop="0dp" />

        <TextView
            android:id="@+id/progress11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pidKp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:text="PID Kd"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <SeekBar
            android:id="@+id/pidKd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:paddingTop="0dp"
            android:layout_below="@+id/progress11"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/progress12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pidKd"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:text="PID Ki"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <SeekBar
            android:id="@+id/pidKi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="20dp"
            android:indeterminate="false"
            android:layout_below="@+id/progress12" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progress4"
            android:text="Smoothening"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:gravity="center"
            android:layout_above="@+id/smoothening"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/smoothening"
            android:textColor="@color/white"
            android:indeterminate="false"
            android:paddingTop="2dp"
            android:layout_above="@+id/progress5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progress5"
            android:text="Fragment Max Distance"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:gravity="center"
            android:layout_above="@+id/fragment"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fragment"
            android:indeterminate="false"
            android:paddingTop="2dp"
            android:layout_above="@+id/progress6"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progress6"
            android:text="Left Iteration"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:gravity="center"
            android:layout_above="@+id/leftIteration"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/leftIteration"
            android:indeterminate="false"
            android:paddingTop="2dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progress7"
            android:text="Right Iteration"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:gravity="center"
            android:layout_below="@+id/leftIteration"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rightIteration"
            android:indeterminate="false"
            android:paddingTop="2dp"
            android:layout_below="@+id/progress7"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progress8"
            android:text="Max angle"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:gravity="center"
            android:layout_below="@+id/rightIteration"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/angle"
            android:textColor="@color/white"
            android:indeterminate="false"
            android:paddingTop="2dp"
            android:layout_below="@+id/progress8"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

</LinearLayout>
